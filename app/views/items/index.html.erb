<%= render "shared/toppage"%>


<%# 全体 %>
<div class="top-main">

  <%# コンセプト %>
  <div class="top-concept">
    <h1>知る、使う、伝える</h1>
  </div>

  <%# アイテム一覧全体 %>
  <div class="line-up">
    <%# タイトル %>
    <div class="line-up-title">
      <div class="line-up-title_text">
        <h1>Line Up</h1>
      </div>
    </div>
    <%# アイテム一覧 %>
    <div class="content-item">
    <% if @items != [] %>
      <% @items.each do |item| %>
        <div class="posted-content">
          <%# 代表一枚 %>
          <%= link_to "/items/#{item.id}" do %>
            <%= image_tag item.images[0], class: "main-image" %><br>
          <% end %>
            <%# その他 %>
            <div class="posted-content-others">
              <% item.images[1..-1].each do |image| %>
                <div class="other-images">
                  <%= image_tag image, class: "other-image" %>
                </div>
              <% end %>
            </div>
          <%= item.content %><br>
          <div>
            <div>タグ</div>
            <div><%= item.tags.first&.tag_name %></div>
          </div>
        </div>
      <% end %>
    <% end %>

</div>