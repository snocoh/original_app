<%= render "shared/second-header"%>

<%= form_with model: @user, url: "/users/sign_in",class: 'registration-main', local: true do |f| %>

<div class='form-wrap'>

  <div class='form-header'>
    <h1 class='form-header-text'>Log in</h1>
      <p class='form-acounthelp'>アカウントをまだ持っていませんか？
        <%= link_to '会員登録はこちら', new_user_registration_path, class: "login-signup" %>
      </p>
  </div>

  <div class='error-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>

  <div class="form-group">
    <div class="form-area">
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"メールアドレス", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="form-area">
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"パスワード" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Log in", class:"btn" %>
  </div>

</div>

<% end %>
