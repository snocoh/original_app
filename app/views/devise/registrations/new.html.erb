<%= render "shared/second-header"%>

<%= form_with model: @user, url: "/users", class: 'registration-main', local: true do |f| %>

<div class='form-wrap'>

  <div class='form-header'>
    <h1 class='form-header-text'>Sign Up</h1>
      <p class='form-acounthelp'>アカウントをもうお持ちですか？
        <%= link_to 'ログインはこちら', new_user_session_path, class: "login-signup" %>
      </p>
  </div>

  <div class='error-flash-message'>
    <%= render 'shared/error_messages', model: f.object %>
  </div>

  <div class="form-group">
    <div class="form-area">
      <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"ニックネーム", maxlength:"40" %>
    </div>
  </div>

  <div class="form-group">
    <div class="form-area">
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"メールアドレス", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="form-area">
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"パスワード（6文字以上の半角英数字）" %>
    </div>
  </div>
  <div class='info-area'>
    <span class='info-text'>※英字と数字の両方を含めて設定してください</span>
  </div>

  <div class="form-group">
    <div class="form-area">
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お買い物ですか？ 出品ですか？</label>
    </div>
  </div>
  <div class="user-check">
    <%= f.collection_select(:user_check_id, UserCheck.all, :id, :name, {}, {class:"select-box", id:"item-user-check"}) %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn" %>
  </div>

</div>
<% end %>
